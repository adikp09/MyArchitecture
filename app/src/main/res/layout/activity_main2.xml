<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.Main2Activity">

    <GridLayout
            android:id="@+id/gridLayout"
            android:columnCount="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent">
        <Button
                android:tag="00"
                android:layout_width="100dp"
                android:onClick="onClickBtn"
                android:layout_height="100dp" android:id="@+id/button5"/>
        <Button
                android:tag="01"
                android:layout_width="100dp"
                android:onClick="onClickBtn"
                android:layout_height="100dp" android:id="@+id/button4"/>
        <Button
                android:tag="02"
                android:layout_width="100dp"
                android:onClick="onClickBtn"
                android:layout_height="100dp" android:id="@+id/button"/>

        <Button
                android:tag="10"
                android:layout_width="100dp"
                android:onClick="onClickBtn"
                android:layout_height="100dp" android:id="@+id/button9"/>
        <Button
                android:tag="11"
                android:layout_width="100dp"
                android:onClick="onClickBtn"
                android:layout_height="100dp" android:id="@+id/button6"/>
        <Button
                android:tag="12"
                android:layout_width="100dp"
                android:onClick="onClickBtn"
                android:layout_height="100dp" android:id="@+id/button8"/>

        <Button
                android:tag="20"
                android:layout_width="100dp"
                android:onClick="onClickBtn"
                android:layout_height="100dp" android:id="@+id/button10"/>
        <Button
                android:tag="21"
                android:layout_width="100dp"
                android:onClick="onClickBtn"
                android:layout_height="100dp" android:id="@+id/button11"/>
        <Button
                android:tag="22"
                android:layout_width="100dp"
                android:onClick="onClickBtn"
                android:layout_height="100dp" android:id="@+id/button7"/>
    </GridLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/gridLayout"
            app:layout_constraintEnd_toEndOf="@+id/gridLayout"
    />
    <TextView
            android:text="Winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/textView" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>