<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.Main2Activity">

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/button5"/>
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/button4"/>
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/button"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" android:id="@+id/button9"/>
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/button6"/>
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/button8"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/button10"/>
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/button11"/>
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/button7"/>
        </TableRow>
    </TableLayout>
    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/HeaderBar"
            app:title="Tic-Tac-Toe"
            android:elevation="4dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:layout_gravity="right|center"
                tools:layout_editor_absoluteX="322dp" android:textSize="18sp" tools:layout_editor_absoluteY="19dp"
                android:layout_margin="10dp" android:id="@+id/tv_reset"/>

    </android.support.v7.widget.Toolbar>
</android.support.constraint.ConstraintLayout>